<html lang="en">
<head>
    <title>Images Downloader</title>
    <meta charset="utf-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <style>
        .container{
            margin-top: 100px;
            min-height: 100vh;
        }
        input[type=text]{
            width: 600px
        }
    </style>
</head>

<body>
    <div class="container">
        <p class="mb-0 text-center" style="font-size: 30px; padding-bottom: 50px">Image Downloader</p>
        <form method="post" action="/download" class="text-center">
            <div class="form-group">
                <label for="imageLink">
                    <p style="text-align: left">Image Link:</p>
                    <input type="text" name="imageLink" id="imageLink" class="form-control">
                </label>
            </div>

            <div class="form-group">
                <label for="imageName">
                    <p style="text-align: left">Image Name:</p>
                    <input type="text" name="imageName" id="imageName" class="form-control">
                </label>
            </div>

            <div class="form-group" style="text-align: center; padding-top: 10px">
                <button type="submit" class="btn btn-primary mb-2">Download</button>
            </div>
        </form>

        <p class="mb-0 text-left" style="font-size: 25px; padding-bottom: 20px">History:</p>
        <table class="table table-striped text-center" id="events-table">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col" style="width: 90px">Image name</th>
                <th scope="col">Link</th>
                <th scope="col">Local path</th>
            </tr>
            </thead>
            <tbody>
            <% for (let i=0; i< imagesJson.length; i++){%>
                <tr>
                    <th scope="row" class="id-cell"><%= i+1 %></th>
                    <td><%= imagesJson[i].imageName%></td>
                    <td><%= imagesJson[i].imageLink%></td>
                    <td><%= imagesJson[i].localLink%></td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</body>

</html>